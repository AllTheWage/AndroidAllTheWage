<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <TextView
        android:id="@+id/signupTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Sign up"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/companyNameET"
        android:layout_width="250dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Company Name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:layout_below="@+id/signupTV"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="250dp"

        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:layout_below="@+id/companyNameET"
        android:layout_alignStart="@+id/companyNameET" />

    <EditText
        android:id="@+id/ageET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Age"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:layout_below="@+id/nameET"
        android:layout_alignStart="@+id/nameET"
        android:layout_alignEnd="@+id/nameET" />

    <EditText
        android:id="@+id/phoneET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:layout_below="@+id/ageET"
        android:layout_alignStart="@+id/ageET"
        android:layout_alignEnd="@+id/ageET" />

    <EditText
        android:id="@+id/emailET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:layout_below="@+id/phoneET"
        android:layout_alignStart="@+id/phoneET"
        android:layout_alignEnd="@+id/phoneET" />

    <EditText
        android:id="@+id/passET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_below="@+id/emailET"
        android:layout_alignStart="@+id/emailET"
        android:layout_alignEnd="@+id/emailET" />

    <EditText
        android:id="@+id/confirmPassET"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_below="@+id/passET"
        android:layout_alignStart="@+id/passET"
        android:layout_alignEnd="@+id/passET" />

    <Button
        android:id="@+id/employeeSignup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button1"
        android:textColor="#fff"
        android:text="sign up"
        android:layout_below="@+id/confirmPassET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />


</RelativeLayout>